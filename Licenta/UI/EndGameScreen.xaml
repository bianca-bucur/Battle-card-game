<UserControl x:Class="Licenta.EndGameScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Licenta"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Image x:Name="backgroundImage" Source="{StaticResource BackgroundImage}" Stretch="UniformToFill" ></Image>
        <TextBlock x:Name="endText" TextAlignment="Center" VerticalAlignment="Top" Margin="130" FontSize="30" Foreground="Crimson" Background="Black" Opacity="0.6" FontWeight="ExtraBold" FontFamily="Consolas"></TextBlock>
        <Button Width="200" Height="70" Margin="100"  Content="Back to main menu" Click="ReturnToMenu"></Button>
    </Grid>
</UserControl>
